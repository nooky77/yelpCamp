<%- layout("/layouts/boilerplate") %> 

<div class="row">
    <div class="col-6">
        <div class="card mb-5">
            <img src="<%= camp.image %>" class="card-img-top" alt="image-campground">
            <div class="card-body">
              <h5 class="card-title"><%= camp.title %></h5>
              <p class="card-text"><%= camp.description %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= camp.location %></li>
              <li class="list-group-item">$<%= camp.price %>/night</li>
            </ul>
            <% if (currentUser && camp.author.equals(currentUser._id)) { %>
                <div class="card-body">
                    <a href="/campgrounds/<%= camp.id %>/edit" class="card-link btn btn-info">Edit Campground</a>
                    <form class="d-inline" action="/campgrounds/<%= camp.id %>?_method=DELETE" method="post">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            <% } %>
            <div class="card-footer text-muted">
                Submitted by <%= camp.author.username %>
            </div>
        </div>
    </div>
    <div class="col-6">
        <div class="mb-5">
            <h3>Leave a review:</h3>
            <form action="/campgrounds/<%= camp.id %>/reviews" method="post" class="validated-form" novalidate>
                <div class="mb-3">
                    <label for="rating" class="form-label">Rating:</label>
                    <input type="range" class="form-range" min="1" max="5" id="rating" name="rating">              
                </div>
                <div class="mb-3">
                    <label for="body">Review:</label>
                    <textarea class="form-control" name="body" id="body" cols="30" rows="3" required></textarea>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <button class="btn btn-success">Submit Review</button>
            </form>
        </div>
        <% camp.reviews.forEach(review => { %>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Rating: <%= review.rating %></h5>
                    <p class="card-text">Review: <%= review.body %></p>
                    <form action="/campgrounds/<%= camp.id %>/reviews/<%= review.id %>?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
</div>
