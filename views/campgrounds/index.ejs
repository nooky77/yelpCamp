<%- layout("/layouts/boilerplate") %> 
<h1>All Campgrounds</h1>
<a href="/campgrounds/new"><p>Add Campground</p></a>
<% camps.forEach(camp => { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img src="<%= camp.images[0].url %>" class="img-fluid">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %></h5>
                    <p class="card-text"><%= camp.description %></p>
                    <p class="card-text text-muted"><%= camp.location %></p>
                    <a class="btn btn-primary" href="/campgrounds/<%= camp.id %>">View <%= camp.title %></a>
                </div>
            </div>
        </div>
    </div>
<% }) %>
